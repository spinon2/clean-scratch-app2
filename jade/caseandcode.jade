doctype html
html
	head
		title Case And Code - Jade
		script(type="text/javascript").
			var numItems = 10;
		style.
			.tble { width:500px; text-align:center; }
			.tble td { padding:20px 30px; }
			.red { text-align:center; color:red; }
			.blue { text-align:center; color:blue; }
			.green { text-align:center; color:green; }

	body
