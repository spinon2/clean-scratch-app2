			tr
				td
					- var numItems = 20
					case numItems
						when 10: .red this is a red div with #{numItems} values
						when 20: .blue this is a red div with #{numItems} values
						when 30: .green this is a red div with #{numItems} values
						default
							div thi a default div with othervalues #{numItems} Values
			tr
				td
					ul
					- for (var x = 0; x < 3; x++)
						li= 'item num = {#x} '
			tr
				td
					ul
					- list = ["Uno", "Dos", "Tres", "Cuatro", "Cinco", "Seis"]
						each item in list
							li= item

			



